a=int(input("Enter:"))
for i in range(1,a+1):
    for j in range(a-i,0,-1):
        print (" ",end=" ")
    for k in range(1,i+1):
        print("*",end="  ")
    print("\n")
for i in range(1,a+1):
    for j in range(1,i+1):
       print (" ",end=" ")
    for k in range(a-i,0,-1):
        print("*",end="   ")
    print("\n")
